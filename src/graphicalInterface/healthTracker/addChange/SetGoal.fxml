<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalInterface.healthTracker.addChange.SetGoal">
   <children>
      <Label styleClass="health_title" stylesheets="@../../Style.css" text="Set your goal">
         <font>
            <Font size="26.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </Label>
      <Label text="Do you want to?">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <ChoiceBox fx:id="goalChoice" maxWidth="-Infinity" prefWidth="150.0">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </ChoiceBox>
      <Label fx:id="goalErrorLabel" text="Choose a goal!" textFill="RED" visible="false">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="setGoalConfirm" mnemonicParsing="false" onMouseClicked="#updateGoal" styleClass="blue_button" stylesheets="@../../Style.css" text="Set goal">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
      <Label fx:id="setLabel" text="Goal set!" visible="false" />
   </children>
</VBox>
