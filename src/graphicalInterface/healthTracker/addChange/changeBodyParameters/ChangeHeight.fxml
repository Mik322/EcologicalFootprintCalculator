<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalInterface.healthTracker.addChange.changeBodyParameters.ChangeHeight">
   <children>
      <Label text="Change Height">
         <font>
            <Font size="26.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <Label text="Insert your new height (in cm)">
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </Label>
      <TextField fx:id="heightInput" maxWidth="-Infinity" prefWidth="150.0">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextField>
      <Label fx:id="heightErrorLabel" text="Please insert a valid value!(positive integer)" textFill="RED" visible="false">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="changeHeightConfirm" mnemonicParsing="false" onMouseClicked="#changeHeight" text="Change height">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
      <Label fx:id="changedLabel" text="Changed!" visible="false" />
   </children>
</VBox>
