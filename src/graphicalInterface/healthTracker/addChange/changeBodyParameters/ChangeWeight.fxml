<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalInterface.healthTracker.addChange.changeBodyParameters.ChangeWeight">
      <children>
        <Label text="Change Weight">
            <font>
                <Font size="26.0" />
            </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
        </Label>
          <Label text="Insert your new weight (in kg)">
              <padding>
                  <Insets bottom="10.0" />
              </padding>
          </Label>
          <TextField fx:id="weightInput" maxWidth="-Infinity" prefWidth="150.0">
              <VBox.margin>
                  <Insets bottom="10.0" />
              </VBox.margin>
          </TextField>
      <Label fx:id="weightErrorLabel" text="Insert a valid value!(positive double)" textFill="RED" visible="false" wrapText="true">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
          <Button fx:id="changeWeightConfirm" mnemonicParsing="false" onMouseClicked="#changeWeight" text="Change weight">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
      <Label fx:id="changedLabel" text="Changed!" visible="false" />
      </children>
  </VBox>
