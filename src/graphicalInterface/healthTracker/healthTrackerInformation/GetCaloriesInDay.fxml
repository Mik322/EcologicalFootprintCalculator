<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalInterface.healthTracker.healthTrackerInformation.GetCaloriesInDay">
   <children>
      <Label text="Get calories balance in a specific day">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Label text="Choose a day:">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <DatePicker fx:id="caloriesDate">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </DatePicker>
      <Button fx:id="getCaloriesConfirm" mnemonicParsing="false" onMouseClicked="#getCaloriesConsumed" text="Get calories consumed">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="caloriesDisplay" text="Calories" textAlignment="CENTER" visible="false" wrapText="true" />
   </children>
</VBox>
