<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalInterface.healthTracker.healthTrackerInformation.GetCaloriesInLastDays">
   <children>
      <Label styleClass="health_title" stylesheets="@../../Style.css" text="Get calories balance in the last days">
         <font>
            <Font size="26.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <Label text="How many days back?">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="daysInput" maxWidth="-Infinity" prefWidth="150.0">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextField>
      <Label fx:id="daysErrorLabel" text="Insert a valid value!(positive integer)" textFill="RED" visible="false">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <Button mnemonicParsing="false" onMouseClicked="#getCaloriesInLastDays" styleClass="blue_button" stylesheets="@../../Style.css" text="Get balance">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="caloriesInfo" text="result" textAlignment="CENTER" visible="false" wrapText="true">
         <font>
            <Font size="14.0" />
         </font></Label>
   </children>
</VBox>
