<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalInterface.healthTracker.healthTrackerInformation.GetCaloriesInLastDays">
   <children>
      <Label layoutX="96.0" layoutY="33.0" text="Get calories balance in the last days">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <VBox alignment="TOP_CENTER" layoutX="159.0" layoutY="100.0" prefHeight="200.0" prefWidth="282.0">
         <children>
            <Label text="How many days back?">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="daysInput">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onMouseClicked="#getCaloriesInLastDays" text="Get balance">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="caloriesInfo" text="result" textAlignment="CENTER" visible="false" wrapText="true" />
         </children>
      </VBox>
   </children>
</AnchorPane>
