<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalInterface.footprintCalculator.FootprintCalculator">
   <left>
      <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="white_menu" stylesheets="@../Style.css" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="transportationButton" mnemonicParsing="false" onMouseClicked="#transportationMenu" prefHeight="70.0" prefWidth="130.0" styleClass="white_button" stylesheets="@../Style.css" text="Transportation" textFill="#07245a">
               <font>
                  <Font name="Be Vietnam Regular" size="13.0" />
               </font></Button>
            <Button fx:id="wasteButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#wasteMenu" prefHeight="70.0" prefWidth="130.0" styleClass="white_button" stylesheets="@../Style.css" text="Waste" textFill="#07245a">
               <font>
                  <Font name="Be Vietnam Regular" size="13.0" />
               </font></Button>
            <Button fx:id="electricityButton" layoutX="10.0" layoutY="80.0" mnemonicParsing="false" onMouseClicked="#electricityMenu" prefHeight="70.0" prefWidth="130.0" styleClass="white_button" stylesheets="@../Style.css" text="Electricity" textFill="#07245a">
               <font>
                  <Font name="Be Vietnam Regular" size="13.0" />
               </font></Button>
         </children>
      </VBox>
   </left>
   <center>
      <VBox fx:id="footprintDisplay" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label lineSpacing="10.0" text="Foot Print Calculator">
               <font>
                  <Font name="Be Vietnam Regular" size="24.0" />
               </font></Label>
            <Label text="In the foot print calculator you can see how many carbon (g CO2) you produce with waste, electricity and transportation">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Label>
            <Label text="Total Emissions:">
               <font>
                  <Font name="Be Vietnam Regular" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
               <children>
                  <Label text="Waste emissions" />
                  <Label text="Transport emissions" GridPane.rowIndex="1" />
                  <Label text="Electricity Emissions" GridPane.rowIndex="2" />
                  <Label text="Total Emissions" GridPane.rowIndex="3" />
                  <Label fx:id="waste" text="0g" GridPane.columnIndex="1" />
                  <Label fx:id="transport" text="0g" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label fx:id="electricity" text="0g" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label fx:id="total" text="0g" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <HBox alignment="CENTER">
               <children>
                  <Label text="If everyone lived like you we would need ">
                     <font>
                        <Font name="Be Vietnam Regular" size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="earths" layoutX="173.0" layoutY="10.0" text="1">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label layoutX="496.0" layoutY="10.0" text=" earth(s)">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
