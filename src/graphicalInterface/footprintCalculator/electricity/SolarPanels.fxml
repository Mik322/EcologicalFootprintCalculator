<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalInterface.footprintCalculator.electricity.SolarPanels">
   <children>
      <Label text="Number of Daily Sunlight Hours" />
      <TextField fx:id="sunlight" />
      <Label layoutX="29.0" layoutY="10.0" text="Solar Panel Power (in Watt)" />
      <TextField fx:id="panelPower" />
      <GridPane alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="100.0" minWidth="500.0">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Number Of Solar Panels" GridPane.columnIndex="1" />
            <TextField fx:id="numberPanels" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label fx:id="necessaryPanels" GridPane.rowIndex="3">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="totalPower" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#calcTotalPower" text="Calculate Panel Power" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#calcSolarPanels" text="Calculate Number Of Necessary Panels" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS" GridPane.rowSpan="3">
               <font>
                  <Font size="13.0" />
               </font>
            </Button>
         </children>
      </GridPane>
   </children>
</VBox>
