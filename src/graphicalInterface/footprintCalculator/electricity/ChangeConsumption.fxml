<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphicalInterface.footprintCalculator.electricity.ChangeConsumption">
   <children>
      <Label styleClass="footprint_title" stylesheets="@../../Style.css" text="Set Monthly Consumption (in kWh)">
         <font>
            <Font size="26.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="consumption" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" />
      <Label fx:id="infoLabel" layoutX="10.0" layoutY="10.0" textFill="RED" />
      <Button mnemonicParsing="false" onAction="#changeConsumption" styleClass="green_button" stylesheets="@../../Style.css" text="Change" />
   </children>
</VBox>
